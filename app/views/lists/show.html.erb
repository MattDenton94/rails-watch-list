<div class="movies-container">
<h1 class="movies-heading"><strong>Here are the movies in your chosen list:</strong></h1>

<%= link_to "Add a movie", new_list_bookmark_path(@list), class:"btn btn-primary" %>

<% @list.bookmarks.each do |bookmark| %>
  <div class="movie-block">
    <h3><%= bookmark.movie.title %></h3>
    <p><%= bookmark.movie.overview %></p>
    <img src="<%= bookmark.movie.poster_url %>" alt="<%= bookmark.movie.title %> poster">
    <p>Rating: <%= bookmark.movie.rating %></p>
    <%= link_to "Delete", bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
  </div>
  <br><br>
<% end %>


<%= link_to "Return to Lists", lists_path, class:"btn btn-light" %>
</div>
